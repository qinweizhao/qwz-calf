<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qinweizhao.system.module.authority.mapper.SysMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.qinweizhao.system.module.authority.entity.SysMenu">
        <id column="menu_id" property="menuId"/>
        <result column="menu_name" property="menuName"/>
        <result column="parent_id" property="parentId"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="menu_type" property="menuType"/>
        <result column="permission" property="permission"/>
        <result column="icon" property="icon"/>
        <result column="menu_sort" property="menuSort"/>
        <result column="deleted" property="deleted"/>
        <result column="enabled" property="enabled"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="selectMenuListByUsername" resultType="com.qinweizhao.system.module.authority.entity.SysMenu">
        SELECT m.*
        FROM sys_menu m
                 LEFT JOIN sys_role_menu rm ON rm.menu_id = m.menu_id
                 LEFT JOIN sys_role r ON rm.role_id = r.role_id
                 LEFT JOIN sys_user_role ur ON r.role_id = ur.role_id
                 LEFT JOIN sys_user u ON u.user_id = ur.user_id
        WHERE u.username = #{username}
    </select>

</mapper>
