<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qinweizhao.system.module.manage.mapper.SysRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.qinweizhao.system.module.manage.entity.SysRole">
        <id column="role_id" property="roleId"/>
        <result column="role_name" property="roleName"/>
        <result column="role_key" property="roleKey"/>
        <result column="level" property="level"/>
        <result column="description" property="description"/>
        <result column="data_scope" property="dataScope"/>
        <result column="sort" property="sort"/>
        <result column="deleted" property="deleted"/>
        <result column="status" property="status"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        create_by
        ,create_time,data_scope,deleted,description,level,role_id,role_key,role_name,sort,status,update_by,update_time
    </sql>

    <update id="updateRoleStatusById">
        UPDATE sys_role
        SET status=#{status}
        WHERE role_id = #{roleId}
    </update>

    <select id="selectRoleByRoleName" resultType="com.qinweizhao.system.module.manage.entity.SysRole">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_role
        WHERE role_name = #{roleName}
    </select>

    <select id="selectRoleByRoleKey" resultType="com.qinweizhao.system.module.manage.entity.SysRole">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_role
        WHERE role_key = #{roleKey}
    </select>

    <select id="selectListSimpleRoles" resultType="com.qinweizhao.system.module.manage.entity.SysRole">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_role
        WHERE status = #{status}
    </select>

    <select id="selectPageRoles" resultType="com.qinweizhao.system.module.manage.entity.SysRole">
        SELECT
        create_by,create_time,data_scope,deleted,description,level,role_id,role_key,role_name,sort,status,update_by,update_time
        FROM sys_role
        <where>
            <if test="search.keyword != null and search.keyword != ''">
                role_name like concat('%', #{search.keyword}, '%')
            </if>
            <!-- 开始时间检索 -->
            <if test="search.beginTime != null and search.beginTime != ''">
                AND date_format(create_time,'%y%m%d') &gt;= date_format(#{search.beginTime},'%y%m%d')
            </if>
            <!-- 结束时间检索 -->
            <if test="search.endTime != null and search.endTime != ''">
                AND date_format(create_time,'%y%m%d') &lt;= date_format(#{search.endTime},'%y%m%d')
            </if>
        </where>
    </select>

</mapper>
