<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qinweizhao.system.module.manage.mapper.SysMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.qinweizhao.system.module.manage.entity.SysMenu">
        <id column="menu_id" property="menuId"/>
        <result column="menu_name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="menu_type" property="type"/>
        <result column="permission" property="permission"/>
        <result column="icon" property="icon"/>
        <result column="sort" property="sort"/>
        <result column="deleted" property="deleted"/>
        <result column="status" property="status"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        component
        ,create_by,create_time,deleted,icon,menu_id,menu_name,menu_type,parent_id,path,permission,sort,status,update_by,update_time
    </sql>

    <select id="selectMenuListByUsername" resultType="com.qinweizhao.system.module.manage.entity.SysMenu">
        SELECT m.*
        FROM sys_menu m
                 LEFT JOIN sys_role_menu rm ON rm.menu_id = m.menu_id
                 LEFT JOIN sys_role r ON rm.role_id = r.role_id
                 LEFT JOIN sys_user_role ur ON r.role_id = ur.role_id
                 LEFT JOIN sys_user u ON u.user_id = ur.user_id
        WHERE u.username = #{username}
          AND m.menu_type !=#{type}
    </select>

    <select id="selectMenuByParentIdAndName" resultType="com.qinweizhao.system.module.manage.entity.SysMenu">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_menu WHERE parent_id=#{parentId} AND menu_name = #{name}
    </select>

    <select id="selectCountByParentId" resultType="java.lang.Integer">
        SELECT COUNT(0)
        FROM sys_menu
        WHERE parent_id = #{parentId}
    </select>

    <select id="selectListSimpleMenus" resultType="com.qinweizhao.system.module.manage.entity.SysMenu">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_menu
        WHERE status = #{status}
    </select>

    <select id="selectListMenus" resultType="com.qinweizhao.system.module.manage.entity.SysMenu">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sys_menu
        <where>
            <if test="query.name != null and query.name != ''">
                menu_name = #{query.name}
            </if>
        </where>
    </select>

</mapper>
